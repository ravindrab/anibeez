<html>

<head>

<title>ANIBEES</title>

<link rel="stylesheet" type="text/css" href="css/styles.css"/>

</head>

<body>

<div class="home"><!--home container starts-->

<div id="header"><!--Header starts-->

<div class="logo"><a href="#" title="Anibees"><img src="/assets/logo.png" alt="Anibees logo"/></a></div>
 
<div class="table"><!--table starts-->
 <table>

	<tr>
 
	  <td>&nbsp;</td>

	  <td><font color="#eee">Follow us:</font></td>
         
	  <td><a href="#"><img src="/assets/Twitter.png" height="24" width="24"/></a></td>

	  <td><a href="#"><img src="/assets/Facebook.png" height="24" width="24"/></a></td>

	  <td><a href="#"><img src="/assets/LinkedIn.png" height="24" width="24"/></a></td>

        </tr>

  </table>

</div><!--table ends-->

</div><!--header ends-->

<div id="main_container"><!--main_container starts-->

<div id="middlebg"><!--middlebg starts-->
<u><h1 align="center">Registration form</h1></u>
<br/>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form_align"><%= f.label :first_name %>&nbsp;
  <%= f.text_field :first_name %></div>

  <div class="form_align"><%= f.label :last_name %>&nbsp;
  <%= f.text_field :last_name %></div>
  
  <div class="form_align"><%= f.label :'email', 'Anira Mail id'  %>&nbsp;
  <%= f.email_field :email %></div>

  <div class="form_align"><%= f.label :password %>&nbsp;
  <%= f.password_field :password %></div>

  <div class="form_align"><%= f.label :password_confirmation %>&nbsp;
  <%= f.password_field :password_confirmation %></div>

  <div class="form_align"><%= f.label :'alternate_email', 'Alternate Mail Id' %>&nbsp;
  <%= f.email_field :alternate_email %></div>

  <div class="form_align"><%= f.label :'dob', 'Date Of Birth' %>&nbsp;
  <%= f.date_select :dob, :start_year => 1950 %></div>

  <div class="form_align"><%= f.label :'doj', 'Date Of Joining' %>&nbsp;
  <%= f.date_select :doj %></div>

  <div class="form_align"><%= f.label :'phone_no', 'Phone Number' %>&nbsp;
  <%= f.text_field :phone_no %></div>
 
  <div class="form_align"><%= f.label :'sex' %>&nbsp;
  <% ["Male", "Female"].each do |item| %>
  <%= f.radio_button :sex, item %> <%= item %>
  <% end %>
  </div>

 
  <div class="form_align"><%= f.label :'address' ,  'Address For Comunication' %><br/>
  <%= f.text_area :address, rows: 6 %></div>

  <div class="form_align"><%= f.check_box :conditions %>&nbsp;<%= f.label :'conditions','Terms And Conditions' %></div>
  <div class="form_align"> 
    <%= recaptcha_tags %> 
   </div><br/><br/>
  <div align="center"><%= f.submit "Sign up" %></div>
<% end %><br/><br/><br/>



</div><!--middlebg ends-->
<div id="footer"><!--footer starts-->
<span>Copyright &copy; 2012 <a href="http://www.anirasolutions.net" target="blank">Anira</span>
</div><!--footer ends-->

</div><!--main_container ends-->

</div><!--home container ends-->

</body>
</html>



