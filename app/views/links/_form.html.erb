<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :bookmark %><br />

    <%= f.collection_select(:bookmark_id, Bookmark.where(:bookmark_id=>@bookmark.link_id ), :id, :name,{:include_blank => 'Please Select'})%>
 
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script>
$("#bookmark_link_id").change(function() {
     id = $(this).val();
     $.ajax({//Make the Ajax Request
        type: "GET",
        url: "/bookmarks/get_links?cid="+id  ,
     
    });
  });

</script>

